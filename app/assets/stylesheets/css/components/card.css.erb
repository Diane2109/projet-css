
.card-box{
  position: relative;
  display: flex;
  justify-content: space-around;
  margin-top: 400px;
}

.card {
size: 400px;
width: 250px;
height: 350px;
background-size: cover;
background-image: url(<%= asset_path "cat_img.jpg" %>) ;
background-position: center;

}

.img_card{
  width: 250px;
  height: 350px;
  background: linear-gradient(135deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 50% );
}

.portrait_card {
position: absolute;
margin: 10px;
}

.tag {
  width:240px;
  position: absolute;
  text-align: right;
  margin-top: 10px;
  color: #FFF;
}

.description {
  position: absolute;
  bottom:10px;
  padding-left: 20px;
  color: #FFF;
}

.description  h3{
  font-weight: bold;
}
